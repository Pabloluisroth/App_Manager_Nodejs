<%- include("template/header") %>
<%- include("template/navbar") %>
<%- include("template/aside") %> 

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <%- include('template/breadcrumb', {module: 'Edit user'}) %>
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-md-12">
            <% if (user) { %>
          
              <div class="container">   
                <div class="row">
                  <div class="col-md-6">
                    <form action="/updateUser" method="POST">
                      <input hidden id="id" name="id" value="<%= user.id %>">
                      <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" name="name" value="<%= user.name %>" tabindex="1" autofocus>              
                      </div>
                      <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" value="<%= user.email %>" tabindex="2">
                      </div>
                      <div class="mb-3">
                        <select id="rol" name="rol" class="form-select" tabindex="3">
                          <option <%= user.rol=='Admin' ? 'selected' : '' %> value="Admin">Admin</option>
                          <option <%= user.rol=='Subscriber' ? 'selected' : '' %> value="Subscriber">Subscriber</option>
                        </select>
                      </div>

                      <div class="mb-3">
                        <label for="since" class="form-label">Since</label>
                        <input type="date" class="form-control" id="since" name="since" value="<%= user.since %>" tabindex="4">
                      </div>

                      <button type="submit" class="btn btn-primary" tabindex="5">Submit</button>
                      <a href="/users" class="btn btn-secondary">Cancel</a>
                    </form>
                  </div>
                  <div class="col-md-6">
                    <div class="row">
                      <div class="col-sm-9">
                        <div class="form-group">
                          <% if(user.image) { %>
                            <img src="../uploads/<%= user.image %>" alt="<%= user.image %>" width="70px" height="70px">
                          <% } %>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-sm-12">
                        <form action="/upload/<%= user.id %>" method="POST" enctype="multipart/form-data">
                          <input type="file" name="image" class="btn btn-secondary" required>
                          <button type="submit" class="btn btn-primary">
                            Upload
                          </button>
                        </form>
                      </div>
                    </div>
                  </div>   
                </div>  
              </div>
          
          <% } %>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>
    <%- include("template/alert") %> <!-- sweetAlert2 -->
    <%- include("template/footer") %>
    <!-- /.content -->
  </div>
