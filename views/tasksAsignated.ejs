<%- include("template/header") %>
<%- include("template/navbar") %>
<%- include("template/aside") %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <%- include('template/breadcrumb', {module: 'Tasks Asignated'}) %>
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-md-12">            
            <div class="container">
              <table id="example1" class="table table-bordered table-striped text-center mt-4">
                <thead>
                  <tr class="bg-primary text-white">
                    <th scope="col">#ID</th>
                    <th scope="col">Titulo</th> 
                    <th scope="col">Vencimiento</th> 
                    <th scope="col">Asignada</th>
                    <th scope="col">Acciones</th> 
                  </tr>
                </thead>
                <tbody>
                  <% results.forEach ((task) => { %>
        
                    <tr>
                      <th><%= task.id %></th>
                      <th><%= task.titulo%></th>
                      <th><%= task.vencimiento %></th>
                      <th><%= task.asignada %></th>
                      <td>
                        
                      
                      

                        <a href="/taskDetails/<%= task.id %>" class="btn btn-warning "> <i class=" fa fa-info-circle"></i></a>
                        <!-- <a href="/ /<%= task.id %>" onclick="confirmationAsignedTask(<%= task.id %>);"class="btn btn-secondary"> <i class="fa fa-eraser"></i></a>  -->
                        <!-- <a href="/ /<%= task.id %>" onclick="confirmationTerminatedTask(<%= task.id %>);"class="btn btn-primary"> <i class="fa fa-hourglass-end"></i></a>  -->
                        
                        <!-- CREAR Y PASAR EL CONTROLADOR; DESPUES MODIFICAR ROUTER-->
                        
                        <a onclick="confirmationAsignedTask(<%= task.id %>);" class="btn btn-secondary"> <i class="fa fa-eraser"></i></a> 
                        <a onclick="confirmationTerminatedTask(<%= task.id %>);" class="btn btn-primary"> <i class="fa fa-hourglass-end"></i></a> 
                        
                      </td>
                    </tr>                              
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div><!-- /.container-fluid -->


    </section>

    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  
  <%- include("template/footer") %>