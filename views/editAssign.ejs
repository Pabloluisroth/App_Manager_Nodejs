<%- include("template/header") %>
<%- include("template/navbar") %>
<%- include("template/aside") %> 

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <%- include('template/breadcrumb', {module: 'Edit Assingment}) %>
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-md-12">
            <% if (asigned) { %>
              <div class="container">   
                <div class="row">
                  <div class="col-md-6">
                    <form action="/updateAssignedTask" method="POST">
                      <input hidden id="id" name="id" value="<%= assign.id %>">
                      <div class="mb-3">
                        <label for="taskId" class="form-label">ID task</label>
                        <input type="text" class="form-control" id="name" name="name" value="<%= assign.name %>" tabindex="1" autofocus>              
                      </div>
                      <div class="mb-3">
                        <label for="taskId" class="form-label">ID usuario</label>
                        <input type="text" class="form-control" id="email" name="email" value="<%= assign.email %>" tabindex="2">
                      </div>
                      <div class="mb-3">
                        <label for="dateAsigned" class="form-label">Date assigned</label>
                        <input type="date" class="form-control" id="dateAsigned" name="dateAsigned" value="<%= assign.since %>" tabindex="3">
                      </div>
                      <button type="submit" class="btn btn-primary" tabindex="4">Submit</button>
                      <a href="/assigned" class="btn btn-secondary">Cancel</a>
                    </form>
                  </div>
                </div>  
              </div>
          <% } %>
          </div>
        </div>
      </div>
    </section>
    <%- include("template/alert") %> <!-- sweetAlert2 -->
    <%- include("template/footer") %>
  </div>
