<%- include("template/header") %>
<%- include("template/navbar") %>
<%- include("template/aside") %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <%- include('template/breadcrumb', {module: 'Create task'}) %>

    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-3">
          <div class="col-md-12">
            <div class="container">
                <form action="/savetask" method="POST">
                  <div class="mb-3">
                    <label for="titulo" class="form-label">Titulo</label>
                    <input type="text" class="form-control" id="titulo" name="titulo" tabindex="2" required>
                  </div>
                    <div class="mb-3">
                      <label for="descripcion" class="form-label">Descripcion</label>
                      <input type="text" class="form-control" id="descripcion" name="descripcion" tabindex="3" required>
                    </div>
                    <div class="mb-3">
                      <label for="vencimiento" class="form-label">Vencimiento</label>
                      <input type="date" class="form-control" id="vencimiento" name="vencimiento" tabindex="4" required>
                    </div>
                    <button type="submit" class="btn btn-primary" tabindex="5">Submit</button>
                    <a href="/tasks" class="btn btn-secondary">Cancel</a>
                  </form>            
            </div>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  
  <%- include("template/footer") %>