<script>
  $(document).ready(function () {
      $('#tableUsers').DataTable();
      $('#tableProfile').DataTable();
      $('#tableTasks').DataTable();
      $('#tableNotes').DataTable();
      $('#tableAgends').DataTable();
      $('#tableTaskCompleted').DataTable();
  }); 

  function confirmation(id){
    Swal.fire({
      title: 'Are you sure you want to delete the record ' + id + ' ?',
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33',
      confirmButtonText: 'Confirm'
    }).then((result) => {
      if (result.isConfirmed) {
        window.location = '/deleteUser/' + id;
        window.location = '/deleteTask/' + id;
        window.location = '/deleteNote/' + id;
        window.location = '/deleteAgend/' + id;
        window.location = '/deleteProfile/' + id;
      }
    })
  }

