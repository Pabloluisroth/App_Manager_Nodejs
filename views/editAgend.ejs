<%- include("template/header") %>
<%- include("template/navbar") %>
<%- include("template/aside") %> 

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <%- include('template/breadcrumb', {module: 'Edit agend'}) %>
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-md-12">
            <% if (agend) { %>
              <div class="container">   
                <div class="row">
                  <div class="col-md-6">
                    <form action="/updateAgend" method="POST">
                      <input hidden id="id" name="id" value="<%= agend.id %>">
                      <div class="mb-3">
                        <label for="id" class="form-label">Usuario</label>
                        <input type="text" class="form-control" id="id" name="id" value="<%= agend.id %>" tabindex="1" autofocus>        
                      </div>
                      <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" name="name" value="<%= agend.name %>" tabindex="2" autofocus>              
                      </div>
                      <div class="mb-3">
                        <label for="lastname" class="form-label">Last name</label>
                        <input type="text" class="form-control" id="lastname" name="lastname" value="<%= agend.lastname %>" tabindex="3" autofocus>              
                      </div>
                      <div class="mb-3">
                        <label for="rol" class="form-label">Rol</label>
                        <select id="rol" name="rol" class="form-select" tabindex="4">
                          <option <%= agend.rol='Admin' ? 'selected' : '' %> value="Admin">Admin</option>
                          <option <%= agend.rol='Subscriber' ? 'selected' : '' %> value="Subscriber">Subscriber</option>
                        </select>
                      </div>
                      <div class="mb-3">
                        <label for="phone" class="form-label">Phone</label>
                        <input type="phone" class="form-control" id="phone" name="phone" value="<%= agend.phone %>" tabindex="5">
                      </div>
                      <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" value="<%= agend.email %>" tabindex="6">
                      </div>
                      <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <select id="location" name="location" class="form-select" tabindex="7">
                          <option <%= agend.location='Sevilla' ? 'selected' : '' %> value="Sevilla">Sevilla</option>
                          <option <%= agend.location='Huelva' ? 'selected' : '' %> value="Huelva">Huelva</option>
                          <option <%= agend.location='Cadiz' ? 'selected' : '' %> value="Cadiz">Cadiz</option>
                          <option <%= agend.location='Granada' ? 'selected' : '' %> value="Granada">Granada</option>
                          <option <%= agend.location='Malaga' ? 'selected' : '' %> value="Malaga">Malaga</option>
                          <option <%= agend.location='Cordoba' ? 'selected' : '' %> value="Cordoba">Cordoba</option>
                          <option <%= agend.location='Jaen' ? 'selected' : '' %> value="Jaen">Jaen</option>
                          <option <%= agend.location='Almeria' ? 'selected' : '' %> value="Almeria">Almeria</option>
                        </select>
                      </div>
                      <div class="mb-3">
                        <label for="province" class="form-label">Province</label>
                        <input type="text" class="form-control" id="province" name="province" value="<%= agend.province %>" tabindex="8">
                      </div>
                      <div class="mb-3">
                        <label for="address" class="form-label">Address</label>
                        <input type="text" class="form-control" id="address" name="address" value="<%= agend.address %>" tabindex="9">
                      </div>
                      <button type="submit" class="btn btn-primary" tabindex="10">Submit</button>
                      <a href="/agends" class="btn btn-secondary">Cancel</a>
                    </form>
                  </div>
                  <div class="col-md-6">
                    <div class="row">
                      <div class="col-sm-9">
                        <div class="form-group">
                          <% if(agend.image) { %>
                            <img src="../uploads/<%= agend.image %>" alt="<%= agend.image %>" width="70px" height="70px">
                          <% } %>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-sm-12">
                        <form action="/upload/<%= agend.id %>" method="POST" enctype="multipart/form-data">
                          <input type="file" name="image" class="btn btn-secondary" required>
                          <button type="submit" class="btn btn-primary">
                            Upload
                          </button>
                        </form>
                      </div>
                    </div>
                  </div>   
                </div>  
              </div>
          <% } %>
          </div>
        </div>
      </div>
    </section>
    <%- include("template/alert") %> <!-- sweetAlert2 -->
    <%- include("template/footer") %>
  </div>
  